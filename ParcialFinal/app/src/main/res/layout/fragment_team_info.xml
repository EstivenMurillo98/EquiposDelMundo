<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.navigation.TeamInfoFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:paddingBottom="@dimen/layout_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_team_badge"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/img_team_jersey"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/txt_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_team_badge"
                android:layout_centerHorizontal="true"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txt_team_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_team_name"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>
</layout>